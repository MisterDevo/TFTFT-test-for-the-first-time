{
  "name": "tftft",
  "version": "1.1.3",
  "description": "TFTFT : Test For The First Time",
  "scripts": {
    "coverage"   : "istanbul cover _mocha --dir public/cov -- test/route/*.js test/unit/*.js --reporter mochawesome --reporter-options reportDir=public/report,reportName=tests",

    "test-all"   : "_mocha test/**/*.js --reporter mochawesome --reporter-options reportDir=public/report,reportName=tests",
    "test-unit"  : "_mocha test/unit/*.js --reporter mochawesome --reporter-options reportDir=public/report,reportName=test-unit",
    "test-route" : "_mocha test/route/*.js --reporter mochawesome --reporter-options reportDir=public/report,reportName=test-route",
    "test-e2e"   : "_mocha test/spec/*.js --reporter mochawesome --reporter-options reportDir=public/report,reportName=test-spec",
    "test-report" : "npm run test-all && npm run test-unit && npm run test-route && npm run test-e2e",

    "postinstall": "bower install --allow-root && curl -o public/images/misterdevo.svg https://saucelabs.com/browser-matrix/misterdevo.svg && npm run coverage && npm run test-unit && npm run test-route",

    "start": "node ./bin/www",
    "test": "istanbul cover _mocha --report lcovonly -- test/**/*.js"
  },
  "engines": {
    "node": "4.2.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MisterDevo/TFTFT.git"
  },
  "author": "misterdevo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MisterDevo/TFTFT/issues"
  },
  "homepage": "https://github.com/MisterDevo/TFTFT#readme",
  "dependencies": {
    "body-parser": "~1.15.0",
    "bower": "^1.7.7",
    "bower-requirejs": "^1.2.0",
    "cookie-parser": "~1.4.1",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "istanbul": "^0.4.2",
    "jade": "~1.11.0",
    "mocha": "^2.3.4",
    "mochawesome": "^1.3.1",
    "morgan": "~1.7.0",
    "serve-favicon": "~2.3.0",
    "supertest": "^1.1.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.6",
    "istanbul": "^0.4.2",
    "mocha": "^2.3.4",
    "mochawesome": "^1.3.1",
    "saucelabs": "^1.1.0",
    "selenium-webdriver": "^2.52.0",
    "supertest": "^1.1.0",
    "webdriverio": "^4.0.3",
    "xunit-file": "0.0.9"
  }
}
